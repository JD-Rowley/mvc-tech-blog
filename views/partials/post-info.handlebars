<article class="card m-3">
    <div class="card-header bg-light d-flex flex-wrap align-items-center">
        <span class="d-flex col-5 text-decoration-none"><a href="/post/{{id}}"><h3>{{title}}</h3></a></span>
        <span class="d-flex col-7 justify-content-end">Posted by {{user.username}} on {{format_date created_at}}</span>
    </div>
    <div class="card-body">
        {{post_body}}
    </div>
    <div class="card-footer d-flex justify-content-end p-1 px-3">
        <p>{{comments.length}} {{format_plural "comment" comments.length}}</p>
    </div>
</article>