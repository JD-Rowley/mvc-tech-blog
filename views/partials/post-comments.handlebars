<article class="card m-3">
    <div class="card-header d-flex flex-wrap align-items-center">
        <span class="d-flex col-5"><h3>{{title}}</h3></span>
        <span class="d-flex col-7 justify-content-end">Posted by {{user.username}} at {{format_date created_at}}</span>
    </div>
    <div class="card-body text-body" name="post-body">
        {{post_body}}
    </div>
    <div class="card-footer"></div>
</article>
