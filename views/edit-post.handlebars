<article>
    <a href="/dashboard"> &larr; Back to Dashboard</a>
    <h2 class="my-3 text-body">
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div class="form-floating">
            <input type="text" class="form-control" name="post-title" id="post-title" style="width: 500px;" value="{{post.title}}" />
            <label for="post-title" class="text-body">Title</label>
        </div>
        <div>
            <textarea name="post-body" class="form-control my-3" value="{{post.post_body}}"></textarea>
        </div>
        <div class="text-body">
            by you on {{format_date post.created_at}} | {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        <button type="submit" class="btn btn-main my-3">Save Post</button>
        <button type="button" class="btn btn-danger delete-post-btn m-3">Delete Post</button>
    </form>
</article>

<form class="form-floating m-5 text-center comment-form">
    <div>
        <textarea name="comment-body" class="form-control my-3" placeholder="Comments"></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-main">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>