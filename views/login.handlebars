<main class="row form text-center">
    <form class="form-signin login-form">
        <div class="form-floating">
            <input type="email" class="form-control" id="email-login" />
            <label for="email-login">Email Address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="password-login" />
            <label for="password-login">Password</label>
        </div>
        <div>
            <button type="submit" class="btn btn-primary m-3">Login</button>
        </div>
    </form>
    <form class="formsignin signup-form">
        <div class="form-floating">
            <input type="username" class="form-control" id="username-signup" />
            <label for="username-signup">Username</label>
        </div>
        <div class="form-floating">
            <input type="email" class="form-control" id="email-signup" />
            <label for="email-signup">Email Address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="password-signup" />
            <label for="password-signup">Password</label>
        </div>
        <div>
            <button type="submit" class="btn btn-primary m-3">Sign Up</button>
        </div>
    </form>
    <script src="/javascript/login.js"></script>
</main>